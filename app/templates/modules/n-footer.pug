- const logoSrc = './images/n-footer__logo.svg';
- const labelSrc = './images/n-footer__label.svg';

mixin n-footer__frame(srcProp, classProp)
  .n-footer__frame(class=classProp)
    figure.n-footer__frame-image
      img.n-footer__frame-img(src=srcProp alt='')

footer.n-footer(data-aos='fade-up')
  .n-footer__wrapper
    .n-footer__container
      .n-footer__block.n-footer__block--0
        +n-footer__frame(logoSrc, [
          'n-footer__logo',
          'n-footer__logo--top',
        ])
      .n-footer__block.n-footer__block--1
        nav.n-footer__nav
          ul.n-footer__nav-list
            -
              const navItems = [
                'Правовые документы',
                'Галерея',
                'Контакты',
              ];
